<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="drupalxpert">
  <description>PHP CodeSniffer configuration for escueladrupal development.</description>
  <!-- Check all files in the current directory and below. -->
  <file>./web/themes/custom/drupales/drupales.theme</file>
  <file>./web/modules/custom/</file>
  <arg name="extensions" value="php,module,inc,install,test,profile,theme,info,txt,md,yml"/>
  <!-- Change this value to 7 if you want to check Drupal 7 code. -->
  <config name="drupal_core_version" value="11"/>
  <config name="installed_paths" value="vendor/drupal/coder/coder_sniffer/,vendor/slevomat/coding-standard/" />
  <rule ref="vendor/drupal/coder/coder_sniffer/Drupal">
  </rule>
  <rule ref="vendor/drupal/coder/coder_sniffer/DrupalPractice"/>

</ruleset>
